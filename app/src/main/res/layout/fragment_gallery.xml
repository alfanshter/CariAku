<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.MenuUpload.foto.GalleryFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/appbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_close"
                android:id="@+id/btn_closefoto"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/tulisan"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_check"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_check"
                />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/appbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_tampilkamera"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_cerita"
        android:layout_below="@id/img_tampilkamera"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gambarbbaru"
            android:hint="cerita"
            android:id="@+id/edt_cerita"
            />


    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Kamera"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/btn_kamera"
        android:layout_below="@+id/rv_cerita"
        />


</RelativeLayout>